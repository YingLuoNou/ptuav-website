---
import { ClientRouter } from 'astro:transitions';
import { Navbar } from "@/components/Navbar";
import Footer from "@/components/Footer.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Phoenixtech - Aerial Intelligence" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
        
        <script is:inline>
          // 1. 封装主题应用逻辑
          const applyTheme = () => {
            const localTheme = localStorage.getItem('theme');
            // 逻辑：如果有本地缓存，用缓存；否则检测系统偏好
            if (localTheme === 'dark') {
              document.documentElement.classList.add('dark');
            } else if (localTheme === 'light') {
              document.documentElement.classList.remove('dark');
            } else {
              if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                document.documentElement.classList.add('dark');
              } else {
                document.documentElement.classList.remove('dark');
              }
            }
          };

          // 2. 首次加载立即执行
          applyTheme();

          // 2. 关键修复：在页面交换内容 *之前* 同步状态
		// 这样新页面渲染时已经是暗黑模式，彻底消除闪烁
		document.addEventListener('astro:before-swap', (ev) => {
			// 从当前页面获取是否是暗黑模式
			const isDark = document.documentElement.classList.contains('dark');
			// 将状态同步到即将被渲染的新文档 (newDocument)
			if (isDark) {
			ev.newDocument.documentElement.classList.add('dark');
			} else {
			ev.newDocument.documentElement.classList.remove('dark');
			}
		});
        </script>
	</head>
	<body class="bg-white text-neutral-900 dark:bg-black dark:text-neutral-200 antialiased selection:bg-blue-500 selection:text-white">
        <Navbar client:load transition:persist transition:name="main-nav" />
        <slot />
		<Footer />
	</body>
</html>

<style is:global>
	/* 显式定义 HTML 背景色，防止浏览器默认白色闪烁 */
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
		background-color: white; /* 默认亮色背景 */
	}

	/* 当有 dark 类时，立即应用深色背景 */
	html.dark {
		background-color: black; /* 或者 #0a0a0a */
	}
	
	/* 滚动条美化（可选） */
	::-webkit-scrollbar {
		width: 10px;
	}
	::-webkit-scrollbar-track {
		background: #000;
	}
	::-webkit-scrollbar-thumb {
		background: #333;
		border-radius: 5px;
	}
	::-webkit-scrollbar-thumb:hover {
		background: #555;
	}
</style>