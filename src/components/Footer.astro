---
// src/components/Footer.astro
import { getCollection } from 'astro:content';
import { CONTACT_CONFIG } from '../config/contacts';

// 1. 获取并排序产品
const allProducts = await getCollection('products');

// 排序逻辑：如果有日期按日期倒序（最新的在前），否则按 order 排序
const recentProducts = allProducts.sort((a, b) => {
  if (a.data.date && b.data.date) {
    return b.data.date.valueOf() - a.data.date.valueOf();
  }
  return a.data.order - b.data.order;
}).slice(0, 5);

const currentYear = new Date().getFullYear();
---

<footer class="bg-neutral-100 dark:bg-neutral-900 text-neutral-600 dark:text-neutral-400 border-t border-neutral-200 dark:border-neutral-800 text-sm">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      
      {/* 左侧区域：企业信息 */}
      <div class="space-y-6">
        <div>
          {/* 企业名称 */}
          <h2 class="text-2xl font-bold text-neutral-900 dark:text-white">
            PhoenixTech
          </h2>
          {/* 副标题 */}
          <p class="mt-2 text-neutral-500 dark:text-neutral-400">
            Aerial Intelligence Solutions
          </p>
        </div>

        {/* 企业标语 */}
        <p class="text-base leading-relaxed max-w-md">
          致力于为全球客户提供最先进的无人机技术与智能化解决方案，探索无限可能。
        </p>

        {/* 联系方式：成行罗列 */}
        <div class="flex flex-col gap-2 pt-4">
          {CONTACT_CONFIG.map((contact) => (
            <div class="flex items-center gap-3">
               {/* 如果你想渲染图标，可以使用 Fragment set:html，这里按要求主要以文字形式展示，图标作为辅助 */}
              <span class="w-5 h-5 flex items-center justify-center text-neutral-400" set:html={contact.svg} />
              <span class="font-medium text-neutral-700 dark:text-neutral-300">
                {contact.platform}:
              </span>
              <a 
                href={contact.address} 
                class="hover:text-blue-600 transition-colors duration-200"
                target={contact.address.startsWith('http') ? "_blank" : "_self"}
              >
                {/* 简单的处理：如果是 mailto 去掉前缀显示，或者直接显示 raw address */}
                {contact.address.replace('mailto:', '')}
              </a>
            </div>
          ))}
        </div>
      </div>

      {/* 右侧区域：两列布局 */}
      <div class="grid grid-cols-2 gap-8 lg:pl-12">
        
        {/* 第一列：产品中心 */}
        <div>
          <h3 class="text-neutral-900 dark:text-white font-semibold mb-4 text-base">产品中心</h3>
          <ul class="space-y-3">
            {recentProducts.map((product) => (
              <li>
                <a 
                  href={`/products/${product.id}`} 
                  class="hover:text-blue-600 transition-colors duration-200 block truncate"
                >
                  {product.data.title}
                </a>
              </li>
            ))}
          </ul>
          <div class="mt-4 pt-4 border-t border-neutral-200 dark:border-neutral-800">
            <a href="/products" class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium">
              全部产品 &rarr;
            </a>
          </div>
        </div>

        {/* 第二列：服务支持 */}
        <div>
          <h3 class="text-neutral-900 dark:text-white font-semibold mb-4 text-base">服务支持</h3>
          <ul class="space-y-3">
            <li>
              {/* 假设技术文档链接 */}
              <a href="http://192.168.2.110:4322" class="hover:text-blue-600 transition-colors duration-200">
                技术文档
              </a>
            </li>
            <li>
              <a href="/cases" class="hover:text-blue-600 transition-colors duration-200">
                客户案例
              </a>
            </li>
            <li>
              <a href="/about" class="hover:text-blue-600 transition-colors duration-200">
                关于我们
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    {/* 底部版权与备案号 */}
    <div class="mt-12 pt-8 border-t border-neutral-200 dark:border-neutral-800 text-center text-neutral-500">
      <p>
        &copy; {currentYear} PhoenixTech. All rights reserved. 
        <span class="mx-2">|</span> 
        <a href="https://beian.miit.gov.cn/" target="_blank" class="hover:text-neutral-700 dark:hover:text-neutral-300">
          京ICP备12345678号-1
        </a>
      </p>
    </div>
  </div>
</footer>